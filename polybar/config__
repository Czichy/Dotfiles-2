[module/time]
type = internal/date
interval = 0.5

time = %Hh %Mm

format =  <label>
format-foreground = ${xrdb:color6}

label = %time%



[module/ethernet]
type = internal/network
interface = enp0s25

interval = 3.0
;ping-interval = 3
accumulate-stats = true
unknown-as-up = true

; Available tags:
;   <label-connected> (default)
;   <ramp-signal>
format-connected =  <label-connected>
format-connected-foreground = ${xrdb:color1}

; Available tags:
;   <label-disconnected> (default)
format-disconnected = <label-disconnected>

; Available tags:
;   <label-connected> (default)
;   <label-packetloss>
;   <animation-packetloss>
format-packetloss = <animation-packetloss> <label-connected>

; Available tokens:
;   %ifname%    [wireless+wired]
;   %local_ip%  [wireless+wired]
;   %local_ip6% [wireless+wired]
;   %essid%     [wireless]
;   %signal%    [wireless]
;   %upspeed%   [wireless+wired]
;   %downspeed% [wireless+wired]
;   %linkspeed% [wired]
; Default: %ifname% %local_ip%
label-connected = %local_ip%
;label-connected-foreground = #eefafafa

[module/wlan]
type = internal/network
interface = wlp3s0

interval = 3.0

format-connected = <ramp-signal> <label-connected>
format-connected-foreground = ${xrdb:color1}
format-disconnected = <label-disconnected>

label-connected = %essid%

ramp-signal-0 = 
ramp-signal-1 = 
ramp-signal-2 = 
ramp-signal-3 = 
ramp-signal-4 = 



[module/spotify]
type = custom/script

exec = "spotify-now -i ' %title • %artist' -p ' Pausiert' -e ''"
exec-if = if [ "$(playerctl -p spotify status)" = "Playing" ] || [ "$(playerctl -p spotify status)" = "Paused" ]; then true; else false; fi
click-left = playerctl -p spotify play-pause

;tail = true
interval = 0.5



[module/keyboard]
type = internal/xkeyboard

blacklist-0 = num lock

format = %{A1:sh ~/.config/polybar/keytoggle.sh:} <label-layout><label-indicator>%{A}
format-foreground = ${xrdb:color4}

label-layout = %layout%
label-layout-padding = 0
;label-layout-background = #bc99ed
;label-layout-foreground = #000

label-indicator = " + %name%"
label-indicator-padding = 0



[module/logout]
