# mario's i3 config file


### BASIC DEFINITIONS

# Mod key is Windows key
set $mod Mod4

# Standard applications
set $terminal urxvt -e fish
set $launcher lighthouse | bash
set $browser qutebrowser
set $email thunderbird
set $editor vim
set $musicplayer spotify
set $mounttool udiskie -t
set $bluetooth blueman-applet

# test colors from wal
set_from_resource $color0 i3wm.color0 #f0f0f0
set_from_resource $color1 i3wm.color1 #f0f0f0
set_from_resource $color2 i3wm.color2 #f0f0f0
set_from_resource $color3 i3wm.color3 #f0f0f0
set_from_resource $color4 i3wm.color4 #f0f0f0
set_from_resource $color5 i3wm.color5 #f0f0f0
set_from_resource $color6 i3wm.color6 #f0f0f0
set_from_resource $color7 i3wm.color7 #f0f0f0
set_from_resource $fg     i3wm.foreground #ffffff
set_from_resource $bg     i3wm.background #000000
# class                 border  backgr. text    indicator child_border
client.focused          $color1 $color1 #ffffff $color1   $fg
client.focused_inactive #333333 #5f676a #ffffff #484e50   $color1
client.unfocused        #333333 #222222 #888888 #292d2e   $bg
client.urgent           #2f343a #900000 #ffffff #900000   $color3
client.placeholder      #000000 #0c0c0c #ffffff #000000   #0c0c0c

client.background       #ffffff
# In order to determine which window is active even with border pixel 0,
#  compton has its inactive_opacity option enabled.
for_window [class="^.*"] border pixel 1
for_window [class="Spotify"] move container to workspace $ws10
for_window [class="Thunderbird"] move container to workspace $ws9
for_window [class="Oblogout"] fullscreen enable
for_window [class="franz"] move scratchpad
for_window [class="albert"] border pixel 0
for_window [title="floatingterm"] floating enable
for_window [title="Zeichentabelle"] floating enable

set $ingapsize 20
set $outgapsize 0

gaps inner $ingapsize
gaps outer $outgapsize

#smart_gaps on
smart_borders on

font pango:Nerd Font 12


### STARTUP

exec xset -b
exec --no-startup-id light-locker --lock-on-suspend
exec --no-startup-id killall xcompmgr
exec --no-startup-id compton --config ~/.config/compton.conf -b
exec --no-startup-id dunst
exec wal -R
#exec_always --no-startup-id  nm-applet
exec_always --no-startup-id  ~/.config/polybar/launch.sh


### KEY BINDINGS

floating_modifier $mod

# focus shifting
bindsym $mod+Left focus left
bindsym $mod+Down focus down
bindsym $mod+Up focus up
bindsym $mod+Right focus right
bindsym $mod+h focus left
bindsym $mod+j focus down
bindsym $mod+k focus up
bindsym $mod+l focus right

bindsym $mod+Prior workspace next
bindsym $mod+Next workspace prev

# window movement
bindsym $mod+Shift+Left move left
bindsym $mod+Shift+Down move down
bindsym $mod+Shift+Up move up
bindsym $mod+Shift+Right move right
bindsym $mod+Shift+h move left
bindsym $mod+Shift+j move down
bindsym $mod+Shift+k move up
bindsym $mod+Shift+l move right

bindsym $mod+Shift+Prior move container to workspace next
bindsym $mod+Shift+Next move container to workspace prev

# fullscreen
bindsym $mod+f fullscreen toggle

# floating
bindsym $mod+Shift+space floating toggle
bindsym $mod+space focus mode_toggle

# split mode bindings
bindsym $mod+a focus parent
bindsym $mod+Tab focus child
bindsym $mod+s layout toggle split
bindsym $mod+g split h
bindsym $mod+v split v

# kill window
bindsym $mod+Shift+q kill

# restart and exit i3 (i want to remove that)
bindsym $mod+Shift+r restart
#bindsym $mod+Escape exec --no-startup-id "if pgrep -u $UID -x oblogout >/dev/null; then :; else oblogout; fi"
bindsym Mod4+Escape exec --no-startup-id python ~/Scripts/Python/logout.py


# SCRATCHPAD
bindsym $mod+Shift+n move scratchpad
bindsym $mod+n scratchpad show

### WORKSPACES

set $ws1 "1:Browser"
set $ws2 "2:Terminal"
set $ws3 "3:Terminal"
set $ws4 "4:Terminal"
set $ws5 "5:Terminal"
set $ws6 "6:Terminal"
set $ws7 "7:Terminal"
set $ws8 "8:Messaging"
set $ws9 "9:Mail"
set $ws10 "10:Music"

bindsym $mod+1 workspace $ws1
bindsym $mod+2 workspace $ws2
bindsym $mod+3 workspace $ws3
bindsym $mod+4 workspace $ws4
bindsym $mod+5 workspace $ws5
bindsym $mod+6 workspace $ws6
bindsym $mod+7 workspace $ws7
bindsym $mod+8 workspace $ws8
bindsym $mod+9 workspace $ws9
bindsym $mod+0 workspace $ws10

bindsym $mod+Shift+1 move container to workspace $ws1
bindsym $mod+Shift+2 move container to workspace $ws2
bindsym $mod+Shift+3 move container to workspace $ws3
bindsym $mod+Shift+4 move container to workspace $ws4
bindsym $mod+Shift+5 move container to workspace $ws5
bindsym $mod+Shift+6 move container to workspace $ws6
bindsym $mod+Shift+7 move container to workspace $ws7
bindsym $mod+Shift+8 move container to workspace $ws8
bindsym $mod+Shift+9 move container to workspace $ws9
bindsym $mod+Shift+0 move container to workspace $ws10

### RESIZING
bindsym $mod+plus        resize grow width 5 px or 5 ppt
bindsym $mod+Shift+plus  resize shrink width 5 px or 5 ppt
bindsym $mod+minus       resize grow height 5 px or 5 ppt
bindsym $mod+Shift+minus resize shrink height 5 px or 5 ppt

### CHANGE GAP SIZE
bindsym $mod+o gaps outer current plus 10
bindsym $mod+Shift+o gaps outer current minus 10
bindsym $mod+i gaps inner current plus 10
bindsym $mod+Shift+i gaps inner current minus 10
bindsym $mod+u gaps inner current set $ingapsize; gaps outer current set $outgapsize

### START APPLICATIONS
bindsym $mod+Shift+f exec $browser
bindsym $mod+Return exec $terminal
bindsym $mod+Shift+Return exec urxvt -T floatingterm -e fish
bindsym $mod+Shift+t exec $email
bindsym $mod+Shift+s exec $musicplayer
bindsym $mod+Shift+m exec $mounttool
bindsym $mod+Shift+b exec $bluetooth
bindsym $mod+m exec --no-startup-id "if pgrep -u $UID -x mpd >/dev/null; then :; else mpd; fi"
bindsym $mod+Mod1+m exec --no-startup-id "if pgrep -u $UID -x mpd >/dev/null; then killall mpd; fi"
bindsym Menu exec rofi -show drun

# i3-scrot for screenshots
bindsym Print exec --no-startup-id i3-scrot
bindsym Shift+Print exec --no-startup-id i3-scrot -w
bindsym Mod5+Print exec --no-startup-id i3-scrot -s

### FURTHER BINDINGS
bindsym XF86AudioMute exec --no-startup-id amixer set Master toggle
bindsym XF86AudioLowerVolume exec --no-startup-id amixer set Master 5%-
bindsym XF86AudioRaiseVolume exec --no-startup-id amixer set Master 5%+
# bindsym XF86AudioPlay exec --no-startup-id "if pgrep -u $UID -x spotify >/dev/null; then playerctl play-pause; fi && if pgrep -u $UID -x mpd >/dev/null; then mpc toggle; fi"
# bindsym XF86AudioNext exec --no-startup-id "if pgrep -u $UID -x spotify >/dev/null; then playerctl next; fi && if pgrep -u $UID -x mpd >/dev/null; then mpc next; fi"
# bindsym XF86AudioPrev exec --no-startup-id "if pgrep -u $UID -x spotify >/dev/null; then playerctl previous; fi && if pgrep -u $UID -x mpd >/dev/null; then mpc prev; fi"
# bindsym XF86AudioStop exec --no-startup-id "if pgrep -u $UID -x spotify >/dev/null; then playerctl stop; fi && if pgrep -u $UID -x mpd >/dev/null; then mpc stop; fi"
bindsym XF86AudioPlay exec --no-startup-id "if pgrep -u $UID -x spotify >/dev/null; then playerctl play-pause; fi && if pgrep -u $UID -x mopidy >/dev/null; then mpc toggle; fi"
bindsym XF86AudioNext exec --no-startup-id "if pgrep -u $UID -x spotify >/dev/null; then playerctl next; fi && if pgrep -u $UID -x mopidy >/dev/null; then mpc next; fi"
bindsym XF86AudioPrev exec --no-startup-id "if pgrep -u $UID -x spotify >/dev/null; then playerctl previous; fi && if pgrep -u $UID -x mopidy >/dev/null; then mpc prev; fi"
bindsym XF86AudioStop exec --no-startup-id "if pgrep -u $UID -x spotify >/dev/null; then playerctl stop; fi && if pgrep -u $UID -x mopidy >/dev/null; then mpc stop; fi"
bindsym XF86ScreenSaver exec dm-tool lock
bindsym XF86AudioMicMute exec amixer set Capture toggle
bindsym Mod4+t exec setxkbmap -layout de -option caps:swapescape
bindsym Mod4+r exec setxkbmap -layout us -variant altgr-intl -option caps:swapescape
bindsym Mod4+Shift+c exec --no-startup-id "killall compton; compton"
